<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAF6F3"
    tools:context=".hilfe_finden">


    <androidx.core.widget.NestedScrollView
        android:id="@+id/nestedScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/bottom_navbar_height"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <HorizontalScrollView
                android:id="@+id/horizontalScrollView3"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:layout_marginStart="14dp"
                android:layout_marginTop="14dp"
                android:layout_marginEnd="14dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cardView">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ToggleButton
                        android:id="@+id/hilfe_finden_tag_SANITARY"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:background="@drawable/toggle_button_selector"
                        android:drawableLeft="@drawable/ic_tag_sanitaer"
                        android:fontFamily="@font/poppins"
                        android:paddingLeft="9.5dp"
                        android:textColor=" #524D48"
                        android:textOff="Sanitär"
                        android:textOn="Sanitär"
                        android:textSize="13sp" />

                    <ToggleButton
                        android:id="@+id/hilfe_finden_tag_ELECTRIC"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginRight="5dp"
                        android:background="@drawable/toggle_button_selector"
                        android:drawableLeft="@drawable/ic_tag_elektrik"
                        android:fontFamily="@font/poppins"
                        android:paddingLeft="9.5dp"
                        android:textColor=" #524D48"
                        android:textOff="Elektrik"
                        android:textOn="Elektrik"
                        android:textSize="13sp" />

                    <ToggleButton
                        android:id="@+id/hilfe_finden_tag_PAINTER"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:background="@drawable/toggle_button_selector"
                        android:drawableLeft="@drawable/ic_tag_malerei"
                        android:fontFamily="@font/poppins"
                        android:paddingLeft="9.5dp"
                        android:textColor=" #524D48"
                        android:textOff="Malerei"
                        android:textOn="Malerei"
                        android:textSize="13sp" />

                    <ToggleButton
                        android:id="@+id/hilfe_finden_tag_MONTAGE"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:background="@drawable/toggle_button_selector"
                        android:drawableLeft="@drawable/ic_tag_montage"
                        android:fontFamily="@font/poppins"
                        android:paddingLeft="9.5dp"
                        android:textColor=" #524D48"
                        android:textOff="Montage"
                        android:textOn="Montage"
                        android:textSize="13sp" />

                    <ToggleButton
                        android:id="@+id/hilfe_finden_tag_MOVING"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:background="@drawable/toggle_button_selector"
                        android:drawableLeft="@drawable/ic_tag_umzug"
                        android:fontFamily="@font/poppins"
                        android:paddingLeft="9.5dp"
                        android:textColor=" #524D48"
                        android:textOff="Umzug"
                        android:textOn="Umzug"
                        android:textSize="13sp" />

                    <ToggleButton
                        android:id="@+id/hilfe_finden_tag_GARDENING"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:background="@drawable/toggle_button_selector"
                        android:drawableLeft="@drawable/ic_tag_garten"
                        android:fontFamily="@font/poppins"
                        android:paddingLeft="9.5dp"
                        android:textColor=" #524D48"
                        android:textOff="Garten"
                        android:textOn="Garten"
                        android:textSize="13sp" />

                    <ToggleButton
                        android:id="@+id/hilfe_finden_tag_METAL"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:background="@drawable/toggle_button_selector"
                        android:drawableLeft="@drawable/ic_tag_metall"
                        android:fontFamily="@font/poppins"
                        android:paddingLeft="9.5dp"
                        android:textColor=" #524D48"
                        android:textOff="Metall"
                        android:textOn="Metall"
                        android:textSize="13sp" />

                    <ToggleButton
                        android:id="@+id/hilfe_finden_tag_WOOD"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:background="@drawable/toggle_button_selector"
                        android:drawableLeft="@drawable/ic_tag_holz"
                        android:fontFamily="@font/poppins"
                        android:paddingLeft="9.5dp"
                        android:textColor=" #524D48"
                        android:textOff="Holz"
                        android:textOn="Holz"
                        android:textSize="13sp" />

                    <ToggleButton
                        android:id="@+id/hilfe_finden_tag_RENOVATION"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/toggle_button_selector"
                        android:drawableLeft="@drawable/ic_tag_renovierung"
                        android:fontFamily="@font/poppins"
                        android:paddingLeft="9.5dp"
                        android:textColor=" #524D48"
                        android:textOff="Renovierung"
                        android:textOn="Renovierung"
                        android:textSize="13sp" />


                </LinearLayout>
            </HorizontalScrollView>

            <TextView
                android:id="@+id/TItel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="14dp"
                android:layout_marginTop="40dp"
                android:fontFamily="@font/poppins"
                android:gravity="center_horizontal|top"
                android:text="@string/hilfe_finden_header"
                android:textAppearance="@style/hilfe_finden_header"
                android:textColor="#1B4332 "
                android:textSize="23sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/hilfe_finden_ticket_erstellen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="48dp"
                android:layout_marginEnd="32dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_ticket_erstellen" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="14dp"
                android:layout_marginStart="14dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="14dp"
                android:background="@drawable/searchbar"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/TItel">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <SearchView
                        android:id="@+id/hilfe_finden_searchbar"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:iconifiedByDefault="false"
                        android:queryBackground="@android:color/transparent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/hilfe_finden_searchfilter"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.0">

                    </SearchView>

                    <ImageView
                        android:id="@+id/hilfe_finden_searchfilter"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginEnd="18dp"
                        android:gravity="center_horizontal|center"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/ic_suchleiste_filtern" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/hilfe_finden_RecyclerView_profiles"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="14dp"
                android:layout_marginTop="34dp"
                android:layout_marginEnd="14dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/horizontalScrollView3" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="@dimen/bottom_navbar_height"
        app:itemIconSize="35dp"
        app:itemIconTint="@drawable/bottom_navbar_selector_icon"
        app:itemTextAppearanceActive="@style/bottom_nav_text_selected"
        app:itemTextAppearanceInactive="@style/bottom_nav_text_unselected"
        app:itemTextColor="@color/black"
        app:labelVisibilityMode="labeled"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/menu_navigation" />

</androidx.constraintlayout.widget.ConstraintLayout>