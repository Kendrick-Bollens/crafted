<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".hilfe_finden"
    android:background="#FAF6F3"
    >



    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        app:itemIconTint="@drawable/bottom_navbar_selector"
        app:itemTextColor="@drawable/bottom_navbar_selector"
        app:menu="@menu/menu_navigation" >

    </com.google.android.material.bottomnavigation.BottomNavigationView>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/hilfe_finde"
                android:layout_width="132dp"
                android:layout_height="35dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="14dp"
                android:layout_marginTop="16dp"
                android:gravity="center_horizontal|top"
                android:text="@string/hilfe_finden_header"
                android:textAppearance="@style/hilfe_finden_header" />




            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginTop="8dp"
                android:layout_marginHorizontal="14dp"
                android:background="@drawable/bg_searchbar"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <SearchView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:iconifiedByDefault="false"
                        android:queryBackground="@android:color/transparent"
                        />

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        app:srcCompat="@drawable/ic_mein_profil"
                        android:gravity="center_horizontal|center"
                        />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Tags -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/hilfe_finden_RecyclerView_tags"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                />



            <!-- Profile Cards -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/hilfe_finden_RecyclerView_profiles"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="34dp"
                android:layout_marginBottom="60dp"
                />



        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</RelativeLayout>