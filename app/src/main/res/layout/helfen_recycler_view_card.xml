<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="14dp"
        android:layout_marginBottom="14dp"

        app:cardCornerRadius="15dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="187dp"
                app:srcCompat="@drawable/ic_mein_profil"
                android:scaleType="centerCrop"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="16dp"
                android:paddingHorizontal="15dp"
                android:paddingBottom="24dp"
                android:orientation="vertical"
                >
                <TextView
                    android:id="@+id/helfen_card_Titel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="Titel"
                    android:textAppearance="@style/helfen_card_Titel"
                    android:gravity="top"
                    />

                <TextView
                    android:id="@+id/helfen_card_Beschrebung"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="12dp"
                    android:text="Lorem ipsum dolor sit amet, consetetur sadipscing elitr, sed diam nonumy eirmod tempor invidunt ut labore et dolore"
                    android:textAppearance="@style/helfen_card_Beschrebung"
                    android:gravity="top"
                    />

                <TextView
                    android:id="@+id/helfen_card_tags"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="12dp"
                    android:text="Tag A, Tag B, Tag C"
                    android:textAppearance="@style/helfen_card_tags"
                    android:gravity="top"
                    />


                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:rowCount="2">

                    <androidx.cardview.widget.CardView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        app:cardCornerRadius="40dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <ImageView
                            android:id="@+id/helfen_card_Profilbild"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            app:srcCompat="@drawable/ic_mein_profil"
                            android:scaleType="centerCrop"
                            />

                    </androidx.cardview.widget.CardView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/helfen_card_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Name Person"

                            android:textStyle="bold"
                            android:lineSpacingExtra="-8sp"
                            android:textAppearance="@style/helfen_card_name"
                            android:gravity="center_horizontal|center"
                            />




                        <TextView
                            android:id="@+id/helfen_card_rating"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_marginTop="9dp"
                            android:drawablePadding="4dp"
                            android:drawableLeft="@drawable/ic_rating"
                            android:text="0/5"
                            android:textAppearance="@style/helfen_card_rating"
                            android:gravity="center_horizontal|center"
                            />
                    </LinearLayout>

                </GridLayout>

            </LinearLayout>




        </LinearLayout>





    </androidx.cardview.widget.CardView>

</RelativeLayout>