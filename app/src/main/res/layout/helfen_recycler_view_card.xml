<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <androidx.cardview.widget.CardView
        android:id="@+id/helfen_card_body"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="14dp"

        android:layout_marginBottom="14dp"
        app:cardCornerRadius="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/helfen_card_Bild"
                android:layout_width="match_parent"
                android:layout_height="187dp"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/ic_mein_profil" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingHorizontal="15dp"
                android:paddingTop="16dp"
                android:paddingBottom="24dp">

                <TextView
                    android:id="@+id/helfen_card_Titel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:fontFamily="@font/poppins"
                    android:gravity="top"
                    android:text="Titel"
                    android:textAppearance="@style/helfen_card_Titel"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/helfen_card_Beschrebung"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="12dp"
                    android:fontFamily="@font/poppins"
                    android:gravity="top"
                    android:text="Lorem ipsum dolor sit amet, consetetur sadipscing elitr, sed diam nonumy eirmod tempor invidunt ut labore et dolore"
                    android:textAppearance="@style/helfen_card_Beschrebung"
                    android:textColor="#524D48" />

                <TextView
                    android:id="@+id/helfen_card_tags"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="12dp"
                    android:fontFamily="@font/poppins"
                    android:gravity="top"
                    android:text="Tag A, Tag B, Tag C"
                    android:textAppearance="@style/helfen_card_tags"
                    android:textColor="#524D48" />


                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:rowCount="2">

                    <androidx.cardview.widget.CardView
                        android:layout_width="44dp"
                        android:layout_height="44dp"
                        app:cardCornerRadius="40dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <ImageView
                            android:id="@+id/helfen_card_Profilbild"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            app:srcCompat="@drawable/ic_mein_profil" />

                    </androidx.cardview.widget.CardView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/helfen_card_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins"

                            android:gravity="center_horizontal|center"
                            android:text="Name Person"
                            android:textAppearance="@style/helfen_card_name"
                            android:textColor="#000000"
                            android:textSize="13sp" />


                        <TextView
                            android:id="@+id/helfen_card_rating"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_marginTop="9dp"
                            android:drawableLeft="@drawable/ic_helfen_bewertung"
                            android:drawablePadding="4dp"
                            android:fontFamily="@font/poppins"
                            android:gravity="center_horizontal|center"
                            android:text="0/5"
                            android:textAppearance="@style/helfen_card_rating"
                            android:textColor="#1C1208"
                            android:textSize="10sp" />
                    </LinearLayout>

                </GridLayout>

            </LinearLayout>


        </LinearLayout>


    </androidx.cardview.widget.CardView>

</RelativeLayout>